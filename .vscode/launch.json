{
	"version": "0.2.0",
	"configurations": [
		{
			"type": "node",
			"request": "launch",
			"name": "Launch Program",
			"runtimeArgs": ["-r", "ts-node/register"],
			"args": ["${workspaceFolder}/src/app.ts"],
			"cwd": "${workspaceFolder}",
			"outFiles": ["${workspaceFolder}/dist/**/*.js"],
